{
    "compilerOptions": {
        "target": "ESNext",

        "module": "ESNext",

        "moduleResolution": "bundler",

        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./resources/js/*"],
            "ziggy-js": ["./vendor/tightenco/ziggy"]
        },
        "jsx": "react-jsx"
    },
    "include": [
        "resources/js/**/*.jsx",
        "resources/js/**/*",
        "resources/js/app.jsx",
        "resources/js/pages/auth/verify-email.jsx",
        "resources/js/pages/auth/reset-password.jsx",
        "resources/js/pages/auth/register.jsx",
        "resources/js/pages/auth/login.jsx",
        "resources/js/pages/auth/forgot-password.jsx",
        "resources/js/pages/auth/confirm-password.jsx",
        "resources/js/pages/settings/profile.jsx",
        "resources/js/pages/settings/password.jsx",
        "resources/js/pages/settings/appearance.jsx"
    ],
    "exclude": ["node_modules"]
}
